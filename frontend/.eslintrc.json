{
  "env": {
    "browser": true,
    "es6": true,
    "commonjs": true,
    "node": true,
    "amd": true,
    "jest/globals": true
  },
  "extends": [
    "plugin:react/recommended",
    "airbnb"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly",
    "window": true,
    "module": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "jest"
  ],
  "rules": {
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "react/jsx-indent": [
      2,
      4
    ],
    "react/no-array-index-key": 0,
    "react/jsx-indent-props": [
      2,
      4
    ],
    "react/prop-types": 0,
    "max-len": [
      "error",
      {
        "code": 150
      }
    ],
    "jsx-quotes": [
      "error",
      "prefer-single"
    ],
    "linebreak-style": 0,
    "object-curly-spacing": [
      "error",
      "never"
    ],
    "import/prefer-default-export": "off",
    "no-param-reassign": [
      "error",
      {
        "props": false
      }
    ],
    "prefer-destructuring": [
      "error",
      {
        "object": false,
        "array": false
      }
    ],
    "no-plusplus": [
      2,
      {
        "allowForLoopAfterthoughts": true
      }
    ],
    "indent": [
      "error",
      4,
      {
        "SwitchCase": 1
      }
    ],
    "comma-dangle": [
      "error",
      {
        "arrays": "never",
        "objects": "never",
        "imports": "never",
        "exports": "never",
        "functions": "never"
      }
    ],
    "no-nested-ternary": "off"
  }
}
